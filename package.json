{
  "name": "solution-assistant",
  "version": "0.9.0",
  "description": "PowerApps Solution Assistant.",
  "author": "Paul Breuler",
  "license": "MIT ",
  "private": false,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.electron.solution-assistant",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "build/index.html"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "assets/powershell/",
        "to": "powershell/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@material-ui/core": "^1.5.1",
    "@material-ui/icons": "^1.1.0",
    "chartist": "0.11.0",
    "classnames": "^2.2.6",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.16",
    "immutability-helper": "^2.8.0",
    "nedb": "^1.8.0",
    "perfect-scrollbar": "1.4.0",
    "react": "^16.11.0",
    "react-chartist": "0.13.1",
    "react-dom": "^16.11.0",
    "react-popper": "^0.10.4",
    "react-redux": "^5.1.2",
    "react-router-dom": "4.3.1",
    "react-split-pane": "^0.1.87",
    "react-swipeable-views": "0.12.14",
    "react-treeview": "^0.4.7",
    "recompose": "^0.30.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "simple-git": "^1.107.0",
    "xml2js": "^0.4.19"
  },
  "scripts": {
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder -c.extraMetadata.main=build/electron.js",
    "preelectron-pack": "yarn build",
    "webpack:development": "webpack --config ./webpack.development.config.js",
    "webpack:production": "webpack --config ./webpack.production.config.js",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "precommit": "pretty-quick --staged",
    "electron": "electron ."
  },
  "devDependencies": {
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "concurrently": "^3.6.1",
    "devtron": "^1.4.0",
    "electron": "^7.1.10",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "npm-run-all": "4.1.5",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "react-scripts": "2.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "wait-on": "^3.2.0",
    "webpack": "4.19.1",
    "webpack-cli": "^3.3.10"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
